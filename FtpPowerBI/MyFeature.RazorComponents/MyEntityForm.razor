      <MudTable Items="@Vo.SubItems" Hover="true" Breakpoint="Breakpoint.None" Dense="@true" Elevation="0">
      <HeaderContent>


      </HeaderContent>
      <RowTemplate>


      </RowTemplate>
      </MudTable>

      </MudCardContent> *@
    </MudForm>
  </div>
</ReliableContent>
@{
  base.BuildRenderTree(__builder);
}